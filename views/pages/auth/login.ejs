<%-include('../../partials/header.ejs')%>

<div class="container my-4">
    <div class="row">
        <div class="offset-md-3">
        <div class="col-lg-5 offset-lg-1 offset-md-3">
            <div class="category-form">
                <div class="form-title text-center">
                    <h3>Login To Your Account!</h3>
                    <span>Login now </span>
                </div>
                <div class="main-form">
                    <form action="/auth/login" method="POST">
                        <div class="singel-form">
                            <input class="<%= error.email?"is-invalid":"" %>" type="email" name="email" id="email" value="<%= value.email?value.email:"" %>" type="email" placeholder="Your Email">
                            <div class="invalid-feedback">
                                <%= error.email?error.email:"" %>
                            </div>
                        </div>
                        <div class="singel-form">
                            <input class="<%= error.password?"is-invalid":"" %>" type="password" name="password" id="password" value="<%= value.password?value.password:"" %>" type="text" placeholder="Your Password">
                            <div class="invalid-feedback">
                                <%= error.password?error.password:"" %>
                            </div>
                        </div>
                        <!-- <div style="color: red;">
                            <%= //error.loginFail?error.loginFail:"" %>
                        </div> -->
                        <div class="singel-form">
                            <button class="main-btn" type="submit">LOG IN</button>
                        </div>
                        <a href="/auth/signup" class="loginBtn my-3 text-center">Don't have an Account? Create One</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>





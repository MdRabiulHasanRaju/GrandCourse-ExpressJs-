<%-include('../../partials/header.ejs')%>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <%- include('../../partials/sidebar.ejs') %>
            </div>
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="card card-body my-5">
                            <h5>My All Comments</h5>
                            <div class="mt-5" id="comment-holder">
                                <% if(comments.length==0) { %>
                                    <p class="text-muted text-center">There is No Commnet!</p>
                                <% }else {%>
                                    <% for(let comment of comments.reverse()){ %>
                                        <div class="media border my-2">
                                            <img class="rounded-circle mx-3 my-3" style="width: 40px;" src="<%= comment.user.profilepics %> ">
                                            <div class="media-body my-3">
                                                <p class="text-muted">
                                                    On Post <strong><a href="/explorer/<%=comment.post._id %> "><%= comment.post.title %></a></strong> By <a href="/author/<%=comment.user._id%> "><%= comment.user.username %> </a>, <%= moment(comment.createdAt) %> 
                                                </p>
                                                <p><%= comment.body %> </p>
                                                <div name="replies">
                                                    <% if(comment.replies.length>0) { %>
                                                        <% for(let reply of comment.replies){ %>
                                                            <div class="media mt-3">
                                                                <img class="align-self-start mr-3 rounded-circle" style="width: 40px;" src="<%= reply.user.profilepics %>" >
                                                                <div class="media-body">
                                                                    <p><%= reply.body %> </p>
                                                                </div>
                                                            </div>
                                                        <% } %> 
                                                    <% } %> 
                                                </div>
                                                <div class="my-3">
                                                    <input name="reply" type="text" class="form-control" placeholder="Press Enter To Replay" data-comment="<%= comment._id %> ">
                                                </div>
                                            </div>
                                        </div>
                                    <% } %> 
                                <% } %> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%-include('../../partials/footer.ejs')%>
    <script src="/scripts/dashboardComment.js"></script>
        </body>

        </html>
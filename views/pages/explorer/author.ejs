<%-include('../../partials/header')%>

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card card-body">
                <div class="text-center bg-light">
                    <img style="width: 170px;" class="profile-img align-self-start mr-3 rounded-circle img-thumbnail img-fluid" src="<%= author.profilepics %>" alt="">
                </div>
                <div class="my-2 py-3 text-center bg-dark profile-class">
                    <p>Name: <strong><%= author.profile.name %> </strong></p> 
                    <p>Title: <strong><%= author.profile.title %> </strong></p>
                    <p>Bio: <%= author.profile.bio %></p>

                    <div class="link-class">
                        Social Links:
                        <% if(author.profile.links.website) { %>
                            <span>
                                <a href="<%= author.profile.links.website %>" target="_blank">
                                    <i class="fab fa-internet-explorer"></i>
                                </a>
                            </span>
                        <% } %> 
                        <% if(author.profile.links.facebook) { %>
                            <span>
                                <a href="<%= author.profile.links.facebook %>" target="_blank">
                                    <i class="fab fa-facebook-square"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if(author.profile.links.twitter) { %>
                            <span>
                                <a href="<%= author.profile.links.twitter %>" target="_blank">
                                    <i class="fab fa-twitter-square"></i>
                                </a>
                            </span>
                        <% } %>
                        <% if(author.profile.links.github) { %>
                            <span>
                                <a href="<%= author.profile.links.github %>" target="_blank">
                                    <i class="fab fa-github-square"></i>
                                </a>
                            </span>
                        <% } %>
                    </div>
                </div>

                <br>
                <p>Posts Publish By This Author:</p>
                   <div class="row">
                       <% if(author.profile.posts.length == 0){ %>
                        <div class="text-center text-muted">
                            <p>Haven't Publish Any Post</p>
                        </div>
                       <% } else{ %>
                        <% for(let post of author.profile.posts.reverse()){ %>
                            <div class="card col-sm-3 m-3">
                                <% if(post.thumbnail){ %>
                                    <img class="card-img-top mt-3" src="<%= post.thumbnail %>" alt="<%= post.title %>">
                                <% } %>
                                <div class="card-body">
                                    <a style="color: #222; text-decoration: none;" href="/explorer/<%= post._id %>">
                                    <h6><%= post.title %></h6>
                                    </a>
                                </div>
                            </div>
                        <% } %>

                       <% } %>
                   </div>

            </div>
        </div>
    </div>
</div>

<%-include('../../partials/footer')%>
</body>
</html>